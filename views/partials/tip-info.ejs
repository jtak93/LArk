<template id="flagged-tip">
  <tr><td><span class="glyphicon glyphicon-flag" aria-hidden="true" id="red-flag"></span> &nbsp; You flagged this tip.</td></tr>
</template>

<template id="tip-info">
  <table class="table">
    <thead id="table-head">
      <tr>
        <th>Parking Type</th>
        <td> {{parkingType}}
        <% if (user) { %>
          <button id="flag-button" data-id="{{_id}}"><span class="glyphicon glyphicon-flag" aria-hidden="true"></span></button>
        <% } %>
        </td>
      </tr>
      <tr>
        <th id="valid-hours">Valid Hours</th>
        <td>{{#each validHours}}{{day}}: {{startTime}} to {{endTime}}<br>{{/each}}</p></td>
      </tr>
      <tr>
        <th>Cost</th>
        <td> {{cost}} </td>
      </tr>
      <tr>
        <th>Maximum Time</th>
        <td>{{maxTime}}</td>
      </tr>
      <tr>
        <th>Permit</th>
        <td>
          {{#if permit}}
            Required
          {{else}}
            Not Required
          {{/if}}
        </td>
      </tr>
      <tr>
        <th>Comment</th>
        <td>{{comment.message}}</td>
      </tr>
    </thead>
  </table>
  <% if (user) { %>
    <div class="form-inline">
      <button type="submit" class="btn btn-warning btn-sm">Edit</button>
      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
    </div>
  <% } %>
</template>

